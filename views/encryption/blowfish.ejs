<script>
  function encryptBlowfish() {
    return {
      formData: {
        data: '',
        key: '',
        iv: '',
        mode: 'cbc'
      },
          message: '',
          loading: false,
          buttonLabel: 'Encrypt',
  
          submitData() {
              this.buttonLabel = 'encrypting...'
              this.loading = true;
              this.message = ''
              
              fetch('blowfish/encrypt', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify(this.formData)
              })
